{
  "manifest_version": 2,
  "name": "encode",
  "description": "Capture your understanding of the world",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "storage",
    "http://localhost:9090/",
    "http://*.lambdaschool.com/*",
    "http://*.encode.app/*"
  ],
  "background": {
    "matches": [
      "http://*.lambdaschool.com/*",
      "https://*.lambdaschool.com/*",
      "https://*.encode.app/*"
    ],
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.lambdaschool.com/*",
        "https://*.lambdaschool.com/*",
        "https://*.encode.app/*"
      ],
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./assets/images/encode-ext-icon16.png",
    "48": "./assets/images/encode-ext-icon48.png",
    "128": "./assets/images/encode-ext-icon128.png"
  },
  "browser_action": {
     "default_title": "encode"
  },
  "web_accessible_resources": [
    "animation.scss"
  ],
  "key": "ddddddddd2d=",
  "commands": {
    "update-context": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Send a 'context' event to the extension"
    }
  }
}
